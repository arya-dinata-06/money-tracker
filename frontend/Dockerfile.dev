# ============================
# FRONTEND BUILD (NO INSTALL)
# ============================
FROM node:20-alpine AS build

WORKDIR /app

# Copy semua file frontend termasuk node_modules
COPY frontend/ ./

# Build React menggunakan craco (sudah ada di node_modules)
RUN npm ci

# ============================
# NGINX PRODUCTION
# ============================
FROM nginx:stable-alpine

RUN rm -rf /usr/share/nginx/html/*

COPY --from=build /app/build /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
